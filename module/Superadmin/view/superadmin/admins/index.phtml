<?php
/** @var \Core\Entity\User [] $administrators */
$administrators = $this->administrators;
?>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th><?php echo $this->translate('First name'); ?></th>
            <th><?php echo $this->translate('Last name'); ?></th>
            <th><?php echo $this->translate('Email'); ?></th>
            <th><?php echo $this->translate('Status'); ?></th>
            <th><?php echo $this->translate('Actions'); ?></th>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($administrators as $key => $administrator) : ?>
            <tr>
                <td scope="row"><?php echo $key + 1 ; ?></td>
                <td><?php echo $administrator->getFirstName(); ?></td>
                <td><?php echo $administrator->getLastName(); ?></td>
                <td><?php echo $administrator->getEmail(); ?></td>
                <td>
                    <?php if ($administrator->getState() == \Core\Entity\User::STATE_ACTIVE) : ?>
