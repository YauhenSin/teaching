                    <?php else : ?>
                        <a href="<?php echo $this->url('superadmin_admins_index', ['action' => 'activate', 'id' => $administrator->getId()]); ?>" class="btn btn-info btn-xs"><?php echo $this->translate('Blocked'); ?></a>
                    <?php endif; ?>
                </td>
                <td>
                    <a href="<?php echo $this->url('superadmin_admins_index', ['action' => 'edit', 'id' => $administrator->getId()]); ?>" class="btn btn-warning btn-xs"><?php echo $this->translate('Edit'); ?></a>
                    <a href="<?php echo $this->url('superadmin_admins_index', ['action' => 'delete', 'id' => $administrator->getId()]); ?>" class="btn btn-danger btn-xs"><?php echo $this->translate('Delete'); ?></a>
                </td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
</div>